<header class="au-header au-header--dark pillars-container" role="banner">
  <div class="container">
    <div id="pillars"></div>
    <div class="row">
      <div class="col-sm-5">
        <a href="/" title="Home" rel="home" class="au-header__logo">
          <img src="{{ logo_src }}"
            alt="Australia Government Department of Health"
            class="au-header__logo-image au-responsive-media-img"
            width="600" height="146">
        </a>
        <div class="au-sronly">
          <p>Australian Government Department of Health</p>
        </div>
      </div>
      <div class="col-sm-7">
        {# Render component using Fractal. #}
        {% if _env.server or _env.build %}
          {% include '@sub-nav' ignore missing %}
          {% include '@search' ignore missing %}
        {% endif %}
        {# Render component using Drupal. #}
        {% if _env.server == false and _env.build == false %}
          {{ sub_nav }}
          {{ search }}
        {% endif %}
      </div>
    </div>
  </div>
</header>

{# Render component using Fractal. #}
{% if _env.server or _env.build %}
  {% include '@main-nav' ignore missing %}
{% endif %}
{# Render component using Drupal. #}
{% if _env.server == false and _env.build == false %}
  {{ main_nav }}
{% endif %}
